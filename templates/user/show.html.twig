{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <h3 class="mt-4">User profil</h3>

    <table class="table table-hover mt-4 w-75">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex m-4">
    <a class="btn btn-primary" href="{{ path('app_user_index') }}">Back</a>

    <a class="btn btn-success ml-3 mr-3" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifie</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
    </div>
{% endblock %}
