{% extends 'base.html.twig' %}

{% block title %}Evaluation
{% endblock %}

{% block body %}

    <div class="container">
        <h3 class=" text-center my-4">Liste des Evaluations</h3>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3">
            <a class="btn btn-primary" a href="{{ path('app_evaluation_new') }}">+ Evaluation</a>
        </div>

        <table class="table table-hover text-start mb-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Stagiaire</th>
                    <th>Mati√®re</th>
                    <th>Note</th>
                    <th>Date Evaluation</th>

                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for evaluation in evaluations %}
                    <tr>
                        <td>{{ evaluation.idevaluation }}</td>
                        <td>{{ evaluation.prenom}} {{ evaluation.nom }}</td>
                        <td>{{ evaluation.nommatiere }}</td>
                        <td>{{ evaluation.note }}</td>
                        <td>{{ evaluation.dateevaluation ? evaluation.dateevaluation|date('d-m-Y') : '' }}</td>
                        <td>
                            <a class="btn btn-outline-primary" href="{{ path('app_evaluation_show', {'idevaluation': evaluation.idevaluation}) }}">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a class="btn btn-outline-primary" href="{{ path('app_evaluation_edit', {'idevaluation': evaluation.idevaluation}) }}">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>


    {% endblock %}
