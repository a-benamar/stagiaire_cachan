{% extends 'base.html.twig' %}

{% block title %}Evaluation{% endblock %}

{% block body %}
<div class="container">
<div class="">
    <h3 class="my-4">Evaluation</h3>

    <table class="table table-hover w-50">
        <tbody>
            <tr>
                <th>Evaluation ID</th>
                <td>{{ evaluation.idevaluation }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ evaluation.note }}</td>
            </tr>
            <tr>
                <th>Date Evaluation</th>
                <td>{{ evaluation.dateevaluation ? evaluation.dateevaluation|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex ">
    <a class="btn btn-primary m-1" href="{{ path('app_evaluation_index') }}">Retour</a>

    <a class="btn btn-success m-1" href="{{ path('app_evaluation_edit', {'idevaluation': evaluation.idevaluation}) }}">Modifie</a>

    {{ include('evaluation/_delete_form.html.twig') }}
</div>
    </div>
</div>
{% endblock %}
